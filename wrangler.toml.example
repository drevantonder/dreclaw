name = "dreclaw"
main = "src/index.ts"
compatibility_date = "2026-02-22"
compatibility_flags = ["nodejs_compat"]

[observability]
enabled = true

[vars]
WORKSPACE_BUCKET_NAME = "dreclaw-workspace"

[[d1_databases]]
binding = "DRECLAW_DB"
database_name = "dreclaw"
database_id = "REPLACE_WITH_D1_DATABASE_ID"

[[r2_buckets]]
binding = "WORKSPACE_BUCKET"
bucket_name = "dreclaw-workspace"

[[kv_namespaces]]
binding = "AUTH_KV"
id = "REPLACE_WITH_AUTH_KV_NAMESPACE_ID"

[[durable_objects.bindings]]
name = "SESSION_RUNTIME"
class_name = "SessionRuntime"

[[migrations]]
tag = "v1"
new_sqlite_classes = ["SessionRuntime"]
