{
  "name": "dreclaw",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "check": "tsc --noEmit",
    "deploy": "pnpm dlx wrangler deploy",
    "dev": "pnpm dlx wrangler dev",
    "d1:migrate": "pnpm dlx wrangler d1 migrations apply DRECLAW_DB",
    "secrets:sync": "set -a && source .env && set +a && node scripts/secrets-sync.mjs | pnpm dlx wrangler secret bulk",
    "smoke:live": "node scripts/smoke-live.mjs",
    "verify:predeploy": "pnpm check && pnpm test && pnpm smoke:live",
    "test": "vitest run"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260215.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^2.0.30",
    "@jitl/quickjs-wasmfile-release-asyncify": "^0.32.0",
    "ai": "^6.0.98",
    "quickjs-emscripten-core": "^0.32.0",
    "workers-ai-provider": "^3.1.2",
    "zod": "^4.3.6"
  },
  "pnpm": {
    "overrides": {
      "minimatch": "^10.2.1"
    }
  }
}
